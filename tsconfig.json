{
        "compilerOptions": {
                "types": ["node"],
                "target": "es2020",
                "module": "esnext",
                "moduleResolution": "bundler",
                "lib": [
                        "es2020",
                        "dom",
                        "dom.iterable"
                ],
                "allowJs": true,
                "checkJs": true,
                "noEmit": true,
                "strict": true,
                "strictNullChecks": true,
                "esModuleInterop": true,
                "allowImportingTsExtensions": true,
                "forceConsistentCasingInFileNames": true
        },
        "include": [
                "source"
        ]
}